<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="435.0" prefWidth="400.0" style="-fx-background-color: darkcyan;" stylesheets="@mainSS.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.indivproj2_v1.mainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" alignment="CENTER" contentDisplay="CENTER" prefHeight="99.0" prefWidth="360.0" style="-fx-background-color: cadetblue;" text="Sign Up --------------------------" textAlignment="CENTER" wrapText="true">
      <font>
         <Font name="Book Antiqua" size="30.0" />
      </font></Label>
   <VBox alignment="TOP_CENTER" prefHeight="330.0" prefWidth="360.0" style="-fx-background-color: cadetblue;">
      <children>
         <HBox alignment="CENTER" prefHeight="55.0" prefWidth="360.0">
            <children>
               <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="90.0" text="NAME: " textAlignment="RIGHT">
                  <font>
                     <Font name="Book Antiqua" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="signUser" prefHeight="26.0" prefWidth="150.0" />
            </children>
         </HBox>
         <HBox alignment="CENTER" layoutX="10.0" layoutY="50.0" prefHeight="55.0" prefWidth="360.0">
            <children>
               <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="90.0" text="EMAIL: " textAlignment="CENTER">
                  <font>
                     <Font name="Book Antiqua" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="signEmail" prefHeight="26.0" prefWidth="150.0" />
            </children>
         </HBox>
         <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="55.0" prefWidth="360.0">
            <children>
               <Label prefHeight="20.0" prefWidth="90.0" text="PASSWORD: ">
                  <font>
                     <Font name="Book Antiqua" size="14.0" />
                  </font>
               </Label>
               <PasswordField fx:id="signPass" prefHeight="26.0" prefWidth="150.0" />
            </children>
         </HBox>
         <Label fx:id="signFail" alignment="CENTER" contentDisplay="CENTER" prefHeight="26.0" prefWidth="200.0" textAlignment="CENTER">
            <font>
               <Font name="Book Antiqua" size="15.0" />
            </font>
         </Label>
         <Button fx:id="signUPBUTTON" mnemonicParsing="false" onAction="#onSignUPBtnClick" prefHeight="45.0" prefWidth="120.0" styleClass="mainBtn" text="SIGN UP">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <font>
               <Font name="Book Antiqua" size="20.0" />
            </font></Button>
         <Button fx:id="backBtn" mnemonicParsing="false" onAction="#onBackBtnClick" prefHeight="26.0" prefWidth="70.0" styleClass="mainBtn" text="Back" textAlignment="CENTER" wrapText="true">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <font>
               <Font name="Book Antiqua" size="15.0" />
            </font>
         </Button>
      </children>
   </VBox>
</VBox>
